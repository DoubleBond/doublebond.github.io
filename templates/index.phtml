        <base href="/">
        <style type="text/css">
            .loading-wrap{
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 1000;
            }
            .loading{
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                display: table;
                width: 100%;
                height: 100%;
                z-index: 1001;
                color: #fff;
            }
            .loading-align{
                display: table-cell;
                text-align: center;
                vertical-align: middle;
            }
            .loading-section{
                position: absolute;
                top: 0;
                width: 51%;
                height: 100%;
                background-color: #0e1217;
            }
            .loading-left{
                left: 0;
            }
            .loading-right{
                right: 0;
            }
            .is-loaded .loading{
                opacity: 0;
                webkit-transition: all 0.8s 1s ease-in;
                transition: all 0.8s 1s ease-in;
            }
            .is-loaded .loading-left, .is-loaded .loading-right{
                width: 0;
                webkit-transition: all 0.8s 1.8s cubic-bezier(0.645, 0.045, 0.355, 1.000);
                transition: all 0.8s 1.8s cubic-bezier(0.645, 0.045, 0.355, 1.000);
            }
            .is-loaded .loading-wrap{
                visibility: hidden;
                webkit-transition: all 0s 2.6s ease-in;
                transition: all 0s 2.6s ease-in;
            }
        </style>
    </head>
    <body ng-app="app">
        <div class="loading-wrap">
            <div class="loading">
                <div class="loading-align">
                    <img src="loader.gif">
                    <p>LOADING...</p>
                </div>
            </div>
            <div class="loading-section loading-left"></div>
            <div class="loading-section loading-right"></div>
        </div>
        <div class="full-hw" ui-view></div>
        <script src="/build/main.js"></script>
        <script>
          window.onload = function (){
            var body = document.querySelector('body');
            var loading = document.querySelector('.loading-wrap');
            if (body.classList) {
              body.classList.add('is-loaded');
            } else {
              body.className += ' is-loaded';
            }
            setTimeout(function () {
              loading.parentNode.removeChild(loading);
            }, 2600);
          }
        </script>
